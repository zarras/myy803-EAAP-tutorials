package myy803.eaap.domainmodel.datamapper.example.domainmodel;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.List;

import myy803.eaap.domainmodel.datamapper.example.mappers.StopGateway;

public class Route {
	private int id;
	private String name;
	private List<Stop> stops;
		
	public Route(int id, String name, List<Stop> stops) {
		super();
		this.id = id;
		this.name = name;
		this.stops = stops;
	}

	public String checkStatus() {
		String statusReport = "";
		
		for(Stop stop : stops)
			statusReport += stop.checkStatus() + " ";			
		return statusReport;	
	}
	
}
