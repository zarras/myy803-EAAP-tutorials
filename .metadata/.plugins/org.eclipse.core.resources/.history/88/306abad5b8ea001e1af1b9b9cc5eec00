package myy803.eaap.domainmodel.datamapper.example.domainmodel;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import myy803.eaap.domainmodel.datamapper.example.mappers.StopGateway;

public class Stop {
	private static final int STOP_STATUS_OK = 0;
	
	private int id;
	private String name;
	private double latitude;
	private double longtitude;
	private String status;
	private int routeId;
	
	
	public String checkStatus() {
		String statusReport = "";

		if(status == STOP_STATUS_OK)
			statusReport = "Bus stop " + id + " is FUNCTIONAL";
		else 
			statusReport = "Bus stop " + id + " is CLOSED";
		}
		return statusReport;
	}
}
