package myy803.eaap.domainmodel.datamapper.example;

import myy803.eaap.domainmodel.datamapper.example.domainmodel.Route;
import myy803.eaap.domainmodel.datamapper.example.domainmodel.Stop;
import myy803.eaap.domainmodel.datamapper.example.mappers.RouteMapper;
import myy803.eaap.domainmodel.datamapper.example.mappers.StopMapper;

/**
 * Hello world!
 *
 */
public class Main 
{
    public static void main( String[] args )
    {
        System.out.println( "--- City Bus Application Start ---" );        
       
        RouteMapper routeMapper= new RouteMapper();
        StopMapper stopMapper = new StopMapper();
        
        
        
        Route route = new Route(1, "RouteA", null);
        
        Stop stop = new Stop();
        
        routeGateway.saveRoute(1, "RouteA");
        
        stopGateway.saveStop(1, "StopA", 100, 200, StopMapper.STOP_STATUS_OK, 1);
        stopGateway.saveStop(2, "StopB", 200, 400, StopMapper.STOP_STATUS_OK, 1);
        stopGateway.saveStop(3, "StopC", 600, 600, StopMapper.STOP_STATUS_OK, 1);

        System.out.println("Checking StopA Status");
        System.out.println(stopModule.checkStopStatus(1));
        
        System.out.println("Checking StopB Status");
        System.out.println(stopModule.checkStopStatus(2));
        
        System.out.println("Checking StopC Status");
        System.out.println(stopModule.checkStopStatus(3));
        
        System.out.println("Changing StopB Status");
        stopModule.changeStopStatus(1, 2);
        
        System.out.println("Checking Route A Status");
        System.out.println(routeModule.checkRouteStatus(1));

        routeGateway.deleteRoute(1);

        System.out.println( "--- City Bus Application Done ---" );        

    }
}
